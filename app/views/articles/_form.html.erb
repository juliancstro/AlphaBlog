<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
        <% if @article.errors.any? %>
            <div class="alert alert-danger" role="alert" id="error_explanation">
                <div class="text-danger">
                    <h2>
                        It seems that there are 
                        <%= pluralize(@article.errors.count, "error") %>: 
                    </h2>
                </div>
                    
                <ul>
                    <div class="text-danger">
                        <% @article.errors.full_messages.each do |msg| %>
                            <li><%= msg %></li>
                        <% end %>
                    </div>
                </ul>
            </div>
        <% end %>
        
        <%= form_with(model: @article, class: "container shadow-sm p-3 mb-5 bg-dark rounded", local: true) do |form| %>

            <div class="container form-group">
                <%= form.label :title, class: "text-light font-weight-bold col-2 col-form-label" %><br>
                <div class="col-10">
                    <%= form.text_field :title, class: "form-control shadow-sm p-3 mb-5 bg-white rounded" %>
                </div>
            </div>
            
            <div class="container form-group">
                <%= form.label :description, class: "text-light font-weight-bold col-2 col-form-label" %><br>
                <div class="col-10">
                    <%= form.text_area :description, class: "form-control shadow-sm p-3 mb-5 bg-white rounded" %> 
                </div>  
            </div>

            <div class="form-group row justify-content-center">
                <%= form.submit class: "btn btn-light" %>   
            </div>

        <% end %>
    </div>
</div>
    



    

