<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
        <% if @user.errors.any? %>
            <div class="alert alert-danger" role="alert" id="error_explanation">
                <div class="text-danger">
                    <h2>
                        It seems that there are 
                        <%= pluralize(@user.errors.count, "error") %>: 
                    </h2>
                </div>
                    
                <ul>
                    <div class="text-danger">
                        <% @user.errors.full_messages.each do |msg| %>
                            <li><%= msg %></li>
                        <% end %>
                    </div>
                </ul>
            </div>
        <% end %>

        <%= form_with(model: @user, class: "container shadow-sm p-3 mb-5 bg-dark rounded", local: true) do |form| %>
            <% render 'shared/errors' %>

            <div class="container form-group">
                <%= form.label :username, class: "text-light font-weight-bold col-2 col-form-label" %><br>
                <div class="col-10">
                    <%= form.text_field :username, class: "form-control shadow-sm p-3 mb-5 bg-white rounded", placeholder: "Enter your username here" %>
                </div>
            </div>
            
            <div class="container form-group">
                <%= form.label :email, class: "text-light font-weight-bold col-2 col-form-label" %><br>
                <div class="col-10">
                    <%= form.email_field :email, class: "form-control shadow-sm p-3 mb-5 bg-white rounded", placeholder: 'Enter your email here' %> 
                </div>  
            </div>

            <div class="container form-group">
                <%= form.label :password, class: "text-light font-weight-bold col-2 col-form-label" %><br>
                <div class="col-10">
                    <%= form.password_field :password, class: "form-control shadow-sm p-3 mb-5 bg-white rounded", placeholder: 'Enter your password here' %> 
                </div>  
            </div>

            <div class="form-group row justify-content-center">
                <%= form.submit (@user.new_record? ? "Sign Up" : "Update account", class: "btn btn-light") %>   
            </div>
        <% end %>
        <div class="mb-3">
            <%= link_to '[ Articles Listing ]', articles_path, class: "text-info" %>
        </div>
    </div>
</div>
